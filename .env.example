# AI Artist - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# API Keys
# ===========================================

# Unsplash API (Required)
# Get your keys at: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
UNSPLASH_SECRET_KEY=your_unsplash_secret_key_here

# Pexels API (Optional)
# Get your key at: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Hugging Face Token (Optional)
# Only needed for private/gated models
# Get your token at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_huggingface_token_here

# ===========================================
# Database Configuration
# ===========================================

# SQLite (default)
DATABASE_URL=sqlite:///./data/ai_artist.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_artist

# ===========================================
# Application Settings
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Device: cuda, mps, cpu
DEVICE=cuda

# Data type: float16, float32
DTYPE=float16

# ===========================================
# Model Configuration
# ===========================================

# Base model ID
MODEL_ID=stabilityai/stable-diffusion-xl-base-1.0

# LoRA settings (optional)
# LORA_PATH=models/lora/my_style
# LORA_SCALE=0.8

# ===========================================
# Generation Settings
# ===========================================

# Image dimensions
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024

# Generation parameters
NUM_INFERENCE_STEPS=30
GUIDANCE_SCALE=7.5
NUM_VARIATIONS=3

# Negative prompt
NEGATIVE_PROMPT="blurry, low quality, distorted, ugly, deformed, watermark, text"

# ===========================================
# Scheduling Settings
# ===========================================

# Enable automated scheduling
SCHEDULING_ENABLED=true

# Timezone
TIMEZONE=America/Los_Angeles

# Daily creation schedule
DAILY_CREATION_ENABLED=true
DAILY_CREATION_HOUR=9
DAILY_CREATION_MINUTE=0

# ===========================================
# Curation Settings
# ===========================================

# Enable automatic curation
CURATION_ENABLED=true

# Quality threshold (0.0-1.0)
QUALITY_THRESHOLD=0.6

# Keep top N images from batch
KEEP_TOP_N=2

# ===========================================
# Web Interface
# ===========================================

# Web server host
WEB_HOST=0.0.0.0

# Web server port
WEB_PORT=8000

# Enable hot reload (development only)
WEB_RELOAD=false

# ===========================================
# Storage Settings
# ===========================================

# Gallery directory
GALLERY_PATH=gallery

# Models cache directory
MODELS_PATH=models

# Logs directory
LOGS_PATH=logs

# ===========================================
# Security Settings (Future)
# ===========================================

# API rate limiting
# RATE_LIMIT_PER_MINUTE=60

# JWT secret (generate with: openssl rand -hex 32)
# JWT_SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# Performance Settings
# ===========================================

# Enable attention slicing
ENABLE_ATTENTION_SLICING=true

# Enable VAE slicing
ENABLE_VAE_SLICING=true

# ===========================================
# Optional Integrations (Future)
# ===========================================

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=AI Artist <noreply@yourapp.com>

# Webhook URL for notifications
# WEBHOOK_URL=https://your-webhook-url.com

# Cloud storage (S3, GCS, etc.)
# CLOUD_STORAGE_PROVIDER=s3
# CLOUD_STORAGE_BUCKET=your-bucket-name
# CLOUD_STORAGE_ACCESS_KEY=your_access_key
# CLOUD_STORAGE_SECRET_KEY=your_secret_key

# ===========================================
# Development Settings
# ===========================================

# Enable debug mode
DEBUG=false

# Profiling
ENABLE_PROFILING=false

# Testing
TESTING=false
