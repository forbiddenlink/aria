{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "gallery/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/gallery/(.*)",
      "dest": "/gallery/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "GALLERY_ONLY_MODE": "true",
    "GALLERY_PATH": "/tmp/gallery"
  }
}
